{
    "name": "akk-datagrid",
    "scope":[
        {
            "attr": "caption",
            "bind": "@",
            "value": "This is a datagrid"
        },
        {
            "attr": "items",
            "bind": "=",
            "value": "view.selectAndSearch.items"
        },
        {
            "attr": "columns",
            "bind": "=",
            "value": "['lastname', 'firstname', 'job', 'location']"
        },
        {
            "attr": "selected",
            "bind": "=",
            "value": "view.datagrid.selectedItems"
        },
        {
            "attr": "selector",
            "bind": "=",
            "value": "true"
        },
        {
            "attr": "eventClick",
            "bind": "@",
            "value": ""
        },
        {
            "attr": "eventHover",
            "bind": "@",
            "value": ""
        },
        {
            "attr": "eventToggle",
            "bind": "@",
            "value": ""
        },
        {
            "attr": "eventToggleAll",
            "bind": "@",
            "value": ""
        }
    ],
    "label": "This is a datagrid",
    "description": "The akk-datagrid takes an array of objects and an array of columns names and displays it, the datagrid is sortable using any column, just click on the column name to sort, clicking multiple times will toggle the sort type between ascending and descending."
}
