{
    "name": "akk-textarea",
    "scope": [
        {
            "label": "@",
            "elementclass": "@",
            "size": "@",
            "placeholder": "@",
            "req": "@",
            "model": "=",
            "event": "@"
        }
    ],
    "label": "Input your text here",
    "elementclass": "",
    "size": "",
    "placeholder": "input your text",
    "req": true,
    "model": "view.textareaValue",
    "type": "text",
    "description": "The akk-textarea directive allows your users to type some text and stores it in the model property."
}
