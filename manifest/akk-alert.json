{
    "name": "akk-alert",
    "scope": [
        {
            "attr": "title",
            "bind": "@",
            "value": "Youpi"
        },
        {
            "attr": "message",
            "bind": "@",
            "value": "Il va faire beau !"
        },
        {
            "attr": "icon",
            "bind": "@",
            "value": "warning"
        },
        {
            "attr": "event",
            "bind": "@",
            "value": ""
        },
        {
            "attr": "type",
            "bind": "@",
            "value": "view.alert.model"
        },
        {
            "attr": "isDisplayed",
            "bind": "=",
            "value": "view.alert.isDisplayed"
        },
        {
            "attr": "isClosable",
            "bind": "=",
            "value": "view.alert.isClosable"
        }
    ],
    "dependencies": [
        {
            "field": "akk-select",
            "attributes": [
                {
                    "attr": "label",
                    "bind": "@",
                    "value": "Select the type"
                },
                {
                    "attr": "model",
                    "bind": "=",
                    "value": "view.alert.model"
                },
                {
                    "attr": "options",
                    "bind": "=",
                    "value": "view.alert.types"
                },
                {
                    "attr": "value",
                    "bind": "@",
                    "value": "key"
                },
                {
                    "attr": "display",
                    "bind": "@",
                    "value": "label"
                },
                {
                    "attr": "eventUpdate",
                    "bind": "@",
                    "value": "updateAlert"
                }
            ]
        },
        {
            "field": "akk-checkbox",
            "attributes": [
                {
                    "attr": "label",
                    "bind": "@",
                    "value": "Show the close action"
                },
                {
                    "attr": "model",
                    "bind": "=",
                    "value": "view.alert"
                },
                {
                    "attr": "property",
                    "bind": "@",
                    "value": "isClosable"
                }    
            ]
        }
    ]
}
